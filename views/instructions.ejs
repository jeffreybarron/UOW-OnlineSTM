      <h1 id="pageTitle">UOW Online STM</h1>
      <h2><b>Study Name:</b> <%= studyName %></h2>
      <h3>Your instructions for this study</h3>
      <div id="researcherCopy">
        <p>The CUSTOM instructions have not loaded</p>
      </div>
      <div class="starter-template">
        <form id="instructionsForm" class="form-group row" action="/study/<%= studyName %>">
          <input style="display:none" id="studyName" name="studyName" value="<%= studyName %>" />
          <input style="display:none" id="STUDY_ID" name="STUDY_ID" value="<%= qs.STUDY_ID %>" />
          <input style="display:none" id="PROLIFIC_PID" name="PROLIFIC_PID" value="<%= qs.PROLIFIC_PID %>" />
          <input style="display:none" id="SESSION_ID" name="SESSION_ID" value="<%= qs.SESSION_ID %>" />
          <input style="display:none" id="checkConsent" name="checkConsent" value="<%= qs.checkConsent %>" />
          <div class="form-group">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="checkInstructions" name="checkInstructions">
              <label class="form-check-label" for="checkInstructions">I have read and understand these instructions.</label>
            </div>
          <button type="submit" class="btn btn-primary" value="Submit">Continue</button>
    	</form>
    </div>
