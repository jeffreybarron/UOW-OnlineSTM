<% include header_manage.ejs %>
    <div class="container">
      <h1 id="pageTitle">UOW Online STM</h1>
      <h2>Create Block Page</h2>
      <form id="studyForm" class="form-group row" action="/pageafterblock/create" method="POST" >
        <div class="form-group" name="studyName">
            <label for="studyName">Study to Duplicate</label>
            <select class="form-control" id="studyName" 
                value="">
            <% files.forEach(function(file) { %>
                <option><%= file.studyName %></option>
            <% }); %>
            </select>
        </div>
        <div class="form-group" name="pageName">
          <input
            type="text" class="form-control"
            id="pageName" 
            pattern="^([a-zA-Z0-9]{1,12})"
            required>
        </div>              
        <div class="form-group" title="pageafterblock">
          <label for="pageContent">Page Content</label>
          <textarea
            name="pageContent" id="pageContent"
            class="form-control" rows="10"
            value="" required></textarea>
        </div>
      </form>
      <div class="msgResult-error" id="msgResult" style="display:none"></div>
      <div><button type="button" class="btn btn-primary" id="pageCreate" >Create Page</button></div>
<% include footer_doc.ejs %>
    </div>
<!-- End of Main Body -->

<!-- Bootstrap Footer, includes jQuery -->
<% include footer_bootstrap.ejs %>

<!-- Pages specific Scripts -->
  <script src="/<%= rPath %>/static/tinymce/tinymce.min.js"></script>
  <script src="/<%= rPath %>/static/tinymce/jquery.tinymce.min.js"></script>
  <script src="/<%= rPath %>/static/pageCreate.js"></script>
  
  <script>
    tinymce.init({
      selector: '#pageContent'
    });
  </script>

<!-- Close out HTML -->
  </body>
</html>

